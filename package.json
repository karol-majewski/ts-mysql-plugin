    "cross-spawn": "^7.0.1",
    "leven": "^3.1.0",
    "markdown-table": "^1.1.3",
    "mysql-parse": "^2.0.8",
    "mysql2": "^2.1.0",
    "smart-truncate": "^1.0.1",
    "typescript": "^3.7.4",
    "typescript-template-language-service-decorator": "^2.2.0",
    "vscode": "^1.1.36"
